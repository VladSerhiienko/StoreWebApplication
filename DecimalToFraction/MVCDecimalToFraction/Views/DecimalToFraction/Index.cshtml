@using MVCDecimalToFraction.Models
@model  DecimalToFractionContent

@{
  ViewBag.Title = "Decimal-2-Fraction Input";
}

<h2>@ViewBag.Title.</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Calculate", "DecimalToFraction", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>Please, specify the decimal to convert to fraction</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Num, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Num, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Num, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="To fraction" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}